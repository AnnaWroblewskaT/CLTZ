{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h1>Tests list</h1>

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for test in tests %}
                    <tr>
                        <td><a href="{{ path('test_show', { 'id': test.id }) }}">{{ test.id }}</a></td>
                        <td>{{ test.name }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('test_show', { 'id': test.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('test_edit', { 'id': test.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('test_new') }}">Create a new test</a>
                </li>
            </ul>             
        </div>       
    </div>
{% endblock %}
